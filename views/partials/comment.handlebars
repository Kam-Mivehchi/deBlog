{{#if projects.length}}
<div class="col-md-12 project-list">
    <h3>Recent Posts:</h3>

    {{#each projects as |project| }}
    <div class="row mb-3 project col-md-10">
        <div class="card " id="myPost">
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger " data-id="{{project.id}}">DELETE</button>
            </div>

            <div class="col-md-8">
                <h2 id="postHead">
                    <!-- Call helper function with triple brackets to render the emoji span as HTML -->
                    {{!-- {{{get_emoji}}} --}}
                    <a href="/project/{{project.id}}">{{project.title}}</a>
                </h2>

                <p id="date"> {{format_date project.date_created}}</p>
            </div>
            <div class="col-md-12">
                <p>
                    {{project.description}}
                </p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}